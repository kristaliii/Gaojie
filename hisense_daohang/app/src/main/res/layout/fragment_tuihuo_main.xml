<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.seuic.hisense.fragments.pandian.pandianMainFragment">

    <!--列表台头-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/list_tvCreateDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="录入日期"
            android:textColor="@drawable/white"
            android:gravity="center"
            android:layout_weight="3.5"
            android:background="@color/dodgerblue"
            />

        <TextView
            android:id="@+id/list_tvBillCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="单据号"
            android:textColor="@drawable/white"
            android:gravity="center"
            android:layout_weight="5"
            android:background="@color/dodgerblue"
            />

        <TextView
            android:id="@+id/list_tvStaffCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="操作员"
            android:textColor="@drawable/white"
            android:gravity="center"
            android:layout_weight="2"
            android:background="@color/dodgerblue"
            />

        <TextView
            android:id="@+id/list_tvTotalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="总数量"
            android:textColor="@drawable/white"
            android:gravity="center"
            android:layout_weight="2"
            android:background="@color/dodgerblue"
            />

    </LinearLayout>


    <!-- android:layout_weight="1"这里设置layout_weight=1是最关键的，否则底部的LinearLayout无法到底部 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_marginRight="@dimen/x20"
            android:layout_weight="1.5"
            android:background="@drawable/buttonclickstyle2"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16dp"

            />

        <Button
            android:id="@+id/btnDeleteAll"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_marginRight="@dimen/x20"
            android:layout_weight="2"
            android:background="@drawable/buttonclickstyle2"
            android:text="删除全部"
            android:textColor="@color/white"
            android:textSize="16dp"

            />

        <Button
            android:id="@+id/btnUploadSingle"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_marginRight="@dimen/x20"
            android:layout_weight="2"
            android:background="@drawable/buttonclickstyle2"
            android:text="单个上传"
            android:textColor="@color/white"
            android:textSize="16dp"

            />

        <Button
            android:id="@+id/btnUploadAll"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_weight="2"
            android:background="@drawable/buttonclickstyle2"
            android:text="全部上传"
            android:textColor="@color/white"
            android:textSize="16dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:layout_marginTop="0dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/list1"
            style="@style/List"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="blocksDescendants"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_totalCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="共0单"
                android:textColor="@color/red"
                android:layout_weight="1"
                />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:textSize="13dp"
                android:background="@drawable/img_bg_spinner"
                android:id="@+id/spn_status"
                android:layout_weight="1"
                />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOpenBill"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="开单"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonclickstyle2"

                />

            <Button
                android:id="@+id/btnModify"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_weight="1"
                android:textSize="16dp"
                android:text="修改"
                android:textColor="@color/white"
                android:background="@drawable/buttonclickstyle2"

                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
