<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.seuic.hisense.fragments.pandian.pandianScanFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="条码"
                android:gravity=""
                />

            <EditText
                android:id="@+id/editBillCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:hint="商品条码"
                android:background="@drawable/edittext_style"
                />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y40"
                android:textSize="14dp"
                android:text="手工添加"
                android:background="@drawable/buttonclickstyle4"
                android:textColor="@color/white"
                android:visibility="gone"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="品名"
                />

            <EditText
                android:id="@+id/editCPH"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="@color/blackTransparentF"
                android:background="@drawable/edittext_style"
                android:enabled="false"
                android:focusable="false"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="包装"
                />

            <EditText
                android:id="@+id/editBZ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:hint="数量"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/edittext_style"
                />

            <TextView
                android:layout_width="@dimen/x100"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="包装细数"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editBZXS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="@color/blackTransparentF"
                android:background="@drawable/edittext_style"
                android:enabled="false"
                android:focusable="false"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x60"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="单件"

                />

            <EditText
                android:id="@+id/editDJ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:textColor="@color/blackTransparentF"
                android:hint="数量"
                android:layout_marginRight="@dimen/x10"

                android:background="@drawable/edittext_style"
                />

            <TextView
                android:layout_width="@dimen/x100"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="库存"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editKC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="15dp"
                android:background="@drawable/edittext_style"
                android:enabled="false"
                android:focusable="false"
                />

        </LinearLayout>
    </LinearLayout>




    <!-- android:layout_weight="1"这里设置layout_weight=1是最关键的，否则底部的LinearLayout无法到底部 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        >

        <ListView
            android:layout_marginTop="@dimen/y1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/list1"
            style="@style/List"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="blocksDescendants"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y2"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >

        <TextView
            android:id="@+id/tv_totalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="15dp"
            android:text="共0行"
            android:textColor="@color/blue"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/buttonclickstyle2"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/buttonclickstyle2"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

            <Button
                android:id="@+id/btnModify"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/buttonclickstyle2"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

            <Button
                android:id="@+id/btnQuery"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_weight="1"
                android:background="@drawable/buttonclickstyle2"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="16dp"

                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
