<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y150"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDownloadPD"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_weight="1.5"
            android:background="@drawable/buttonclickstyle2"
            android:text="下载盘点单"
            android:textColor="@color/white"
            android:textSize="16dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y30">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="任  务  号:"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spn_PDNO"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_weight="3"
            android:background="@drawable/img_bg_spinner"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="盘点类型:"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spn_Type"
            android:layout_width="0dp"
            android:layout_height="@dimen/y40"
            android:layout_weight="3"
            android:background="@drawable/img_bg_spinner"
            android:textSize="13dp" />
    </LinearLayout>


    <!-- android:layout_weight="1"这里设置layout_weight=1是最关键的，否则底部的LinearLayout无法到底部 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y15">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOK"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_marginRight="@dimen/x80"
                android:layout_weight="1"
                android:background="@drawable/buttonclickstyle2"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/y40"
                android:layout_weight="1"
                android:background="@drawable/buttonclickstyle2"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="16dp"

                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
