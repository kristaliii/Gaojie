<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_snactivity_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_editext"
        android:ems="10"
        android:focusable="false" />

    <EditText
        android:id="@+id/et_snactivity_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_editext"
        android:ems="10"
        android:focusable="false" >
    </EditText>

    <EditText
        android:id="@+id/et_snactivity_seria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_snactivity_sn"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_editext"
        android:ems="10"
        android:focusable="false" />

    <EditText
        android:id="@+id/etTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/et_snactivity_seria"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_editext"
        android:focusable="false" />

</RelativeLayout>