    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/tiankongse</item>
        <item name="android:ems">4</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LinearLayoutRight" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp60</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style >

    <style name="LinearLayoutLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp40</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
